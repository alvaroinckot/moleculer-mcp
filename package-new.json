{
  "name": "moleculer-mcp-bridge",
  "version": "1.0.0",
  "description": "A TypeScript library that bridges Moleculer.js actions to Model Context Protocol (MCP) tools",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    }
  },
  "bin": {
    "bridge-cli": "./dist/cjs/cli/index.js"
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:clean": "rm -rf dist",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "start": "node dist/cjs/bootstrap.js",
    "start:example": "node dist/cjs/bootstrap.js --settings settings.example.json",
    "cli": "node dist/cjs/cli/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "moleculer",
    "mcp",
    "model-context-protocol",
    "bridge",
    "typescript",
    "microservices"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.15.24",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.4",
    "commander": "^14.0.0",
    "express": "^4.18.2",
    "moleculer": "^0.14.35",
    "nats": "^2.29.3",
    "zod": "^3.22.4"
  }
}
